<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns=""  name="GenericProcess">
   <start-state name="submitNewCase">
      <task name="Submit New Case">
         <assignment class="com.idega.jbpm.proxy.JbpmHandlerProxy"> 
				<handlerName>jsonAssignmentHandler</handlerName>
				<propertyMap key-type='java.lang.String' value-type='java.lang.String'>
					<entry><key>expression</key>
						<value>
				             {taskAssignment: {roles: {role: [
				                   {roleName: "bpm_genericProcess_handler", accesses: {access: [read]}},
				                   {roleName: "bpm_genericProcess_owner", accesses: {access: [read, write]}, scope: PI, assignIdentities: {string: ["current_user"]}},
				                   {roleName: "bpm_genericProcess_invited", accesses: {access: [read]}, scope: PI}
		               		 ]} }}
			            </value>
					</entry>
			</propertyMap>
		 </assignment>
         <controller>
            <variable name="string_ownerKennitala" 						access="read,write,required"></variable>
            <variable name="string_ownerEmailAddress" 					access="read,write"></variable>
            <variable name="string_ownerAddress" 						access="read,write,required"></variable>
            <variable name="string_ownerPostCode" 						access="read,write,required"></variable>
            <variable name="string_ownerMunicipality" 					access="read,write"></variable>
            <variable name="string_ownerPhone" 							access="read,write,required"></variable>
			<variable name="string_ownerFullName"						access="read,write,required"></variable>
			<variable name="string_ownerAverageNumberOfEmployees"		access="read,write"></variable>
			<variable name="string_ownerContactPerson"					access="read,write,required"></variable>
			<variable name="string_caseDescription"						access="read,write,required"></variable>
			<variable name="string_ownerAppliedProjectDescription"		access="read,write"></variable>
			<variable name="string_ownerResult"							access="read,write"></variable>
			<variable name="string_ownerApplicantBackground"			access="read,write"></variable>
			<variable name="string_ownerPotentialDevelopment"			access="read,write"></variable>
			<variable name="string_ownerProjectPresentStatus"			access="read,write"></variable>
			<variable name="list_ownerSupportForProject"				access="read,write,required"></variable>
			<variable name="string_ownerBusinessConceptDetail"			access="read,write"></variable>
			<variable name="string_ownerCompetitions"					access="read,write"></variable>
			<variable name="objlist_ownerCostsAndMainTasks"				access="read,write"></variable>
			<variable name="objlist_ownerFinanceOfTasks"				access="read,write"></variable>
			<variable name="list_ownerInformationAboutProgram"			access="read,write"></variable>
			<variable name="string_ownerMobile"							access="read,write"></variable>
			<variable name="string_ownerFax"							access="read,write"></variable>
			<variable name="string_ownerBusinessConcept"				access="read,write,required"></variable>
			<variable name="string_ownerCustomInformationAboutProgram"	access="read,write"></variable>
			<variable name="files_ownerAttachments"						access="read,write"></variable>
			<variable name="string_caseIdentifier"						access="read,write"></variable>
			<variable name="string_ownerOther"							access="read,write"></variable>
			<variable name="string_ownerTotalCost"						access="read,write"></variable>
			<variable name="string_ownerGrantAmount"               	    access="read,write"></variable>
			<variable  name="string_ownerGender"						access="read,write,required"></variable>
			
			
         </controller>
      </task>
      <transition name="toFork" to="fork3"></transition>
		<event type="node-leave">
			<action name="setProcessDescription" class="is.idega.idegaweb.egov.bpm.cases.actionhandlers.SetProcessDescription"/>
		</event>
   </start-state>
   <node name="sendHandlerNewCaseArrivedMessage">
      <event type="node-enter">
         <action class="com.idega.jbpm.proxy.JbpmHandlerProxy"> 
				<handlerName>sendCaseMessagesHandler</handlerName>
				<propertyMap key-type='java.lang.String' value-type='java.lang.String'>
			        <entry>
			        	<key>inlineSubject</key>
			        	<value>
			        		${
			        		Map subjectMap = new HashMap();
			        		subjectMap.put("en", "New case has been created");
			        		subjectMap.put("is_IS", "N\u00FDtt m\u00E1l stofna\u00F0");
			        		return subjectMap;
			        		}
			        		
                		</value>
                	</entry>
                	<entry>
			        	<key>inlineMessage</key>
			        	<value>
			        		${
			        		Map messageMap = new HashMap();
			        		messageMap.put("en", "Hello, {0}. New {1} case with identifier {2} and description {3} has been created.");
			        		messageMap.put("is_IS", "S\u00E6l/ll, {0}. N\u00FDtt m\u00E1l \u00ED flokknum {1} me\u00F0 nafni\u00F0 {3} og m\u00E1lsn\u00FAmeri\u00F0 {2} hefur veri\u00F0 stofna\u00F0.");
			        		return messageMap;
			        		}
                		</value>
                	</entry>
                	<entry>
			        	<key>messageValues</key>
			        	<value>
			        		{list: {mv: [{type: "bean", value: "user.name"}, {type: "bean", value: "piw.processDefinitionW.startTaskName"}, {type: "bean", value: "piw.processIdentifier"}, {type: "bean", value: "piw.processDescription"}]}}
                		</value>
                	</entry>
                	<entry><key>sendToRoles</key><value>bpm_genericProcess_handler</value></entry>
			    </propertyMap>
		 </action>
        
      </event>
   	  <transition name="toFork" to="fork1"></transition>
   </node>
   <task-node name="requestAdditionalInformation">
      <task name="Request Additional Information">
        <!-- <assignment class="com.idega.jbpm.identity.JSONAssignmentHandler">
            <expression>
                {taskAssignment: {roles: {role: [
                   {roleName: "bpm_genericProcess_handler", accesses: {access: [read, write]}}
                ]} }}
            </expression>
         </assignment> -->
          <assignment class="com.idega.jbpm.proxy.JbpmHandlerProxy"> 
				<handlerName>jsonAssignmentHandler</handlerName>
				<propertyMap key-type='java.lang.String' value-type='java.lang.String'>
					<entry><key>expression</key>
						<value>
				            {taskAssignment: {roles: {role: [
		                    	{roleName: "bpm_genericProcess_handler", accesses: {access: [read, write]}}
		                	]} }}
			            </value>
					</entry>
			</propertyMap>
		 </assignment>
         <!--  
         <assignment class="com.idega.jbpm.identity.JSONAssignmentHandler">
            <expression>
                {taskAssignment: {roles: {role: [
                   {roleName: "bpm_genericProcess_handler", accesses: {access: [read, write]}},
