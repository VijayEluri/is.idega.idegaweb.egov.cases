<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
    <managed-bean>
		<managed-bean-name>simpleCasesProcessManager</managed-bean-name>
		<managed-bean-class>is.idega.idegaweb.egov.cases.jbpm.SimpleCasesProcessManager</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
		  	<property-name>jbpmConfiguration</property-name>
		    <value>#{defaultJbpmConfiguration}</value>
		</managed-property>
		<managed-property>
		  	<property-name>documentManagerFactory</property-name>
		    <value>#{xformsDocumentManagerFact}</value>
		</managed-property>
		<managed-property>
		  	<property-name>persistenceManager</property-name>
		    <value>#{xformsPersistenceManager}</value>
		</managed-property>
		<managed-property>
		  	<property-name>viewFactory</property-name>
		    <value>#{process_xforms_viewFactory}</value>
		</managed-property>
		<managed-property>
		  	<property-name>viewToTaskBinder</property-name>
		    <value>#{process_xforms_viewToTask}</value>
		</managed-property>
		<managed-property>
		  	<property-name>sessionFactory</property-name>
		    <value>#{idega_jbpmDSHibernateSessionFactory}</value>
		</managed-property>
		<managed-property>
		  	<property-name>processDefinitionTemplateLocation</property-name>
		    <value>resources/simpleCasesProcTemplates/simpleCasesProcessTemplate/processdefinition.xml</value>
		</managed-property>
		<managed-property>
		  	<property-name>createRequestFormTemplateLocation</property-name>
		    <value>resources/simpleCasesProcTemplates/createRequestTask.xhtml</value>
		</managed-property>
		<managed-property>
		  	<property-name>createResponseFormTemplateLocation</property-name>
		    <value>resources/simpleCasesProcTemplates/createResponseTask.xhtml</value>
		</managed-property>
	</managed-bean>
</faces-config>